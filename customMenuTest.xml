
<?xml version="1.0" encoding="UTF-8" ?> 
<Module>
    <ModulePrefs title="Menu" />
    <Content type="html">
<![CDATA[ 
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Custom Menu Test</title>
<style type="text/css">
.nav {
  list-style: none;
  font-weight: bold;
  margin-bottom: 10px;
  float: left;
  width: 100%;
}

.nav li {
  float: left;
  margin-right: 10px;
  position: relative;
}

.nav a {
  display: block;
  padding: 5px;
  color: #8b8b8b;
  /*background-color: #333;*/
  text-decoration: none;
}

.nav a.active {
  color: #31558e !important;
}

.nav a:hover {
  color: #000;
  /* background-color: #0082da; */
  /* text-decoration: underline; */
  border-bottom: 2px solid #0066cd;
}

.nav ul {
  background-color: #fff;
  list-style: none;
  position: absolute;
  left: -9999px;
  padding-left: 0;
}

.nav ul li {
  padding-top: 1px;
  float: none;
}

.nav ul li a.active {
  color: #31558e !important;
}

.nav ul a {
  white-space: nowrap;
}

.nav li:hover ul {
  left: 0;
}

.nav li:hover a {
  /*background-color: #6b0c36;*/
  /* text-decoration: underline; */
  /* border-bottom: 2px solid blue; */
}

.nav li:hover ul a {
  text-decoration: none;
}

.nav li:hover ul li a:hover {
  /* background-color: #0082da; */
}

</style>
</head>

<body>
    <h5 style="color:rgb(50, 163, 50)"></h5>

    <ul class="nav">
        <li>
            <a href="#">HOME</a>
        </li>
        <li>
            <a href="#">NEWS</a>
        </li>
        <li>
            <a href="#">OUR PRODUCTS</a>
            <ul>
                <li><a href="#">Retina</a></li>
                <li><a href="#">Team Foundation Server</a></li>
            </ul>
        </li>
        <li>
            <a href="#">AGILE</a>
        </li>
        <li>
            <a href="#">ABOUT US</a>
        </li>

    </ul>
    <script>
        var test = document.querySelector('h5');

        var url = (window.location != window.parent.location)
            ? document.referrer
            : document.location.href;
        for (var i = 0; i < document.links.length; i++) {
            if (document.links[i].href == url) {
                document.links[i].className = 'active';
            }
        }

        localStorage.test = "XML file to test a custom menu with indicators";

        test.innerText = localStorage.test;

    </script>
</body>
</html>
]]>
